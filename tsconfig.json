/* Visit https://aka.ms/tsconfig.json to read more about this file */
{
  "compilerOptions": {
    "target": "es2016",    
    "module": "commonjs",                               
    "rootDir": "src",                                 
    "moduleResolution": "node",                      
    "typeRoots": [
      "./src/@types",
      ".node_modules/@types"
    ],                                  
    "removeComments": true,                          
    "outDir": "./dist",                                   
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                               
  }

}
    
   
                                


